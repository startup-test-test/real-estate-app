generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SubscriptionStatus {
  active
  trialing
  past_due
  canceled
  incomplete
  unpaid
}

model Subscription {
  id                     String               @id @default(cuid())
  userId                 String               @unique  // Neon AuthのUser ID
  stripeCustomerId       String               @unique
  stripeSubscriptionId   String               @unique
  status                 SubscriptionStatus
  currentPeriodEnd       DateTime?
  cancelAt               DateTime?
  cancelAtPeriodEnd      Boolean              @default(false)
  createdAt              DateTime             @default(now())
  updatedAt              DateTime             @updatedAt
}

model Simulation {
  id          String   @id @default(cuid())
  userId      String                          // Neon Auth の User ID（個人と紐づく）
  name        String                          // シミュレーション名（物件名など）
  propertyUrl String?                         // 物件URL（任意）
  imageUrl    String?                         // 物件画像URL（Vercel Blob）
  inputData   Json                            // 入力データ（フォーム内容）
  results     Json?                           // 計算結果（IRR, CCR等）
  cashFlow    Json?                           // キャッシュフローテーブル
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])                           // ユーザーIDでの検索を高速化
}

model CFSimulation {
  id            String   @id @default(cuid())
  userId        String                        // Neon Auth の User ID
  name          String                        // 物件名
  inputData     Json                          // 入力データ（購入価格、月額家賃、ローン金額等）
  results       Json?                         // 計算結果（表面利回り、実質利回り、IRR、CCR、DSCR等）
  cashFlowTable Json?                         // 年次キャッシュフローテーブル
  status        String   @default("draft")    // ステータス（draft, saved等）
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])                           // ユーザーIDでの検索を高速化
}
