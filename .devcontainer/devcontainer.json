{
  "name": "real-estate-app",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:18",
  "hostRequirements": {
    "cpus": 4
  },
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },
  "forwardPorts": [5173],
  "portsAttributes": {
    "5173": {
      "onAutoForward": "openBrowser"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.pylint",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next"
      ]
    }
  },
  "postCreateCommand": "cd bolt_front && npm install && ./.devcontainer/setup-claude-code.sh",
  "postStartCommand": "./.devcontainer/setup-claude-code.sh"
}